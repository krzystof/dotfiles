#!/bin/bash

SESSION=Whooks
PROJECT="${HOME}/Code/whooks"

if tmux has-session -t ${SESSION} ; then
  tmux attach-session -t ${SESSION}
  exit 0
fi

trk whooks

cd $PROJECT
docker run --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d postgres

tmux new-session -d -s ${SESSION}
tmux rename-window -n "code"

tmux send-keys -t ${SESSION}:code "nvm && vim ." "C-m"

tmux new-window -n "npm"
tmux split-window -h -t ${SESSION}:npm
tmux split-window -v -t ${SESSION}:npm.1
tmux send-keys -t ${SESSION}:npm.0 "cd webwhooks && yarn start" "C-m"
tmux send-keys -t ${SESSION}:npm.1 "cd apiwhooks && yarn start" "C-m"
tmux send-keys -t ${SESSION}:npm.2 "cd apiwhooks && docker-compose up" "C-m"

tmux attach-session -t ${SESSION}

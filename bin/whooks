#!/bin/bash

SESSION=Whooks
PROJECT="${HOME}/Code/whooks"

if tmux has-session -t ${SESSION} ; then
  tmux attach-session -t ${SESSION}
  exit 0
fi

trk whooks

cd $PROJECT

tmux new-session -d -s ${SESSION}
tmux rename-window -n "code"

tmux send-keys -t ${SESSION}:code "vim ." "C-m"

tmux new-window -n "npm"
tmux split-window -t ${SESSION}:npm
tmux send-keys -t ${SESSION}:npm.0 "cd web && yarn start" "C-m"
tmux send-keys -t ${SESSION}:npm.1 "cd api && yarn start" "C-m"

tmux attach-session -t ${SESSION}

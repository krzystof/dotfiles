[user]
  email = getintouch@christophegraniczny.com
  name = Christophe Graniczny

[alias]
  prune = fetch --prune

[push]
  default = simple
  followTags = true

[merge]
  ff = only
  conflictstyle = diff3

[status]
  showUntrackedFiles = all

[transfer]
  fsckobjects = true # toggle this value if cannot clone a repo
  # fsckobjects = false

[core]
  excludesfile = /home/krzystof/.gitignore_global
  editor = vim


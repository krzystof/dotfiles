silent! set mouse=nvca

function! NeatFoldText()
  let text = v:folddashes .  getline(v:foldstart) . ' ... ' .  getline(v:foldend)
  return substitute(text, '\v\s{2,}', ' ', 'g')
endfunction

set foldtext=NeatFoldText()

